{
  "name": "@gmod/clustering",
  "version": "3.7.0",
  "description": "Hierarchical clustering with WASM",
  "keywords": [
    "jbrowse",
    "clustering",
    "wasm",
    "hierarchical-clustering"
  ],
  "license": "Apache-2.0",
  "homepage": "https://jbrowse.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/GMOD/hclust.git"
  },
  "author": "JBrowse Team",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./esm/index.d.ts",
      "default": "./esm/index.js"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "esm"
  ],
  "scripts": {
    "test": "cd ../..; jest --passWithNoTests packages/clustering",
    "coverage": "yarn test --coverage",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "clean": "rimraf dist esm tsconfig.build.tsbuildinfo",
    "prebuild": "yarn clean",
    "build:wasm": "bash scripts/build_wasm.sh",
    "build:esm": "yarn build:wasm && cp src/wasm/distance.js src/wasm/distance.d.ts src/ && tsc --module esnext --outDir esm",
    "build:cjs": "yarn build:wasm && cp src/wasm/distance.js src/wasm/distance.d.ts src/ && tsc --module commonjs --outDir dist",
    "build": "yarn build:esm && yarn build:cjs",
    "postbuild": "echo '{\"type\": \"commonjs\"}' > dist/package.json",
    "prepack": "yarn build"
  },
  "dependencies": {},
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
